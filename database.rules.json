{
  "rules": {
    ".read": false,
    ".write": false,
    "companies": {
      "$companyId": {
        ".read": "auth.token.companyId === $companyId",
        ".write": "auth.token.companyId === $companyId",
        "applicants": {
          ".indexOn": ["email", "userId"]
        }
      }
    },
    "employees": {
      ".indexOn": ["companyId", "email"]
    }
  }
}
