{
  "rules": {
    ".read": false,
    ".write": false,
    "companies": {
      "$companyId": {
        ".read": "auth.token.companyId === $companyId",
        ".write": "auth.token.companyId === $companyId",
        "applicants": {
          ".indexOn": [
            "email",
            "userId"
          ]
        },
        "notifications": {
          ".indexOn": [
            "userId",
            "read",
            "createdAt"
          ]
        }
      }
    },
    "employees": {
      ".indexOn": [
        "companyId",
        "email",
        "userId"
      ]
    }
  }
}